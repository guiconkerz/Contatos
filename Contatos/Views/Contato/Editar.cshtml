@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}
<div class="text-center">
    <h1>Editar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label class="form-label">Telefone</label>
        <input type="text" class="form-control" asp-for="Telefone" placeholder="Digite o telefone">
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role=" button">Voltar</a>
</form>
